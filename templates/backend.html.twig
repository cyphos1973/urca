<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="fr"
      lang="fr">
<head>
    <meta http-equiv="Content-Type"
          content="text/html; charset=utf-8"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible"
          content="ie=edge">
    <title>{% block title %}{% endblock %} - URCA</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('backend') }}
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link"
                   data-widget="pushmenu"
                   href="#"
                   role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="{{ path('backend_index') }}"
                   class="nav-link">UNIVERSITÉ DE REIMS CHAMPAGNE-ARDENNE </a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-toggle="dropdown"
                   href="#">
                    {{ app.user ? app.user.username }}
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('app_logout') }}"
                       class="dropdown-item">
                        <i class="fas fa-sign-out-alt mr-2"></i> Me déconnecter
                    </a>
                </div>
            </li>
        </ul>
    </nav>
    {%  include '_sidebar_backend.html.twig' %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    {% block breadcrumb %}

                    {% endblock %}
                </div>
            </div>
        </div>
        {% block content %}

        {% endblock %}
    </div>
    <aside class="control-sidebar control-sidebar-dark">
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <footer class="main-footer">
        <div class="float-right d-none d-sm-inline">
            URCA DASHBOARD
        </div>
        <strong>Copyright &copy; 2021 - URCA</strong>
    </footer>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('backend') }}
{% endblock %}
</body>
</html>