{% extends 'backend.html.twig' %}

{% block title %}Envoyer un message{% endblock %}
{% block breadcrumb %}
    <div class="col-sm-6">
        <h1 class="m-0 text-dark">Tableau de bord</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Messagerie</a></li>
            <li class="breadcrumb-item">Nouveau message</li>
        </ol>
    </div>
{% endblock %}
{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-8">
                    {{ form_start(form, {attr: attr|default({})}) }}
                    <div class="card card-outline card-success">
                        <div class="card-header">
                            <h3 class="card-title">Envoyer un message</h3>
                            <div class="card-tools">
                                <span class="badge badge-danger">New</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="inputEmail3"
                                       class="col-sm-4 col-form-label">{{ form_label(form.subject) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.subject) }}
                                    <small>{{ form_help(form.subject) }}</small>
                                </div>
                                <div class="form-error">
                                    {{ form_errors(form.subject) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3"
                                       class="col-sm-4 col-form-label">{{ form_label(form.body) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.body) }}
                                    <small>{{ form_help(form.body) }}</small>
                                </div>
                                <div class="form-error">
                                    {{ form_errors(form.body) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3"
                                       class="col-sm-4 col-form-label">{{ form_label(form.users) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.users) }}
                                    <small>{{ form_help(form.users) }}</small>
                                </div>
                                <div class="form-error">
                                    {{ form_errors(form.users) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3"
                                       class="col-sm-4 col-form-label">{{ form_label(form.documents) }}</label>
                                <div class="col-sm-8">
                                    {{ form_widget(form.documents) }}
                                    <small>{{ form_help(form.documents) }}</small>
                                </div>
                                <div class="form-error">
                                    {{ form_errors(form.documents) }}
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit"
                                    class="{{ button_css|default("btn btn-primary") }}">
                                <i class="fa fa-save"
                                   aria-hidden="true"></i> {{ button_label|default('Enregistrer') }}
                            </button>
                            <a href="{{ path('messagerie_index') }}" class="btn btn-info">Retour Ã  la liste</a>
                            {{ form_widget(form.cancel) }}
                            {#                            {{ include('backend/user/_delete_form.html.twig') }}#}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
